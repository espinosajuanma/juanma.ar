import { socials } from '/src/enums/socials';

const { frontmatter } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <Head title={frontmatter.title}/>
</head>

<body>
    <div class="container">
        <Header />

        <main>
            <h2>Website</h2>
            <section class="buttons row">
                <Button special={true} text='EspaÃ±ol' icon='globe-americas' link='https://www.juanma.ar/es'/>
