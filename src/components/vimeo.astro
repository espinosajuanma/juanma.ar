---
let { id, ratio } = Astro.props;
let src = 'https://player.vimeo.com/video/' + id
let [w, h] = ratio.split(':')
let padding = 100 / w * h;
let style = `padding-top: ${padding}%`;
---
<div class="video" style={style}>
    <iframe src={src}  frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
</div>